{
	"extends": ["next/core-web-vitals", "plugin:jsx-a11y/recommended"],
	"plugins": ["unused-imports", "import", "jsx-a11y", "import-access"],
	"rules": {
		"unused-imports/no-unused-imports": "warn",
		"@typescript-eslint/no-unused-vars": "off",
		"import/no-duplicates": ["warn"],
		"import/order": [
			"warn",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index",
					"object",
					"type"
				],
				"newlines-between": "always",
				"alphabetize": {
					"order": "asc",
					"caseInsensitive": true
				},
				"pathGroups": [
					{
						"pattern": "@/app/**",
						"group": "internal",
						"position": "before"
					},
					{
						"pattern": "{@/features/**,@/hooks/**,@/libs/**}",
						"group": "internal",
						"position": "before"
					},
					{
						"pattern": "@/components/**",
						"group": "internal",
						"position": "before"
					}
				]
			}
		],
		"import-access/jsdoc": "error"
	}
}
